# Forcing workspaces to fixed monitors
workspace 1 output DP-2
workspace 2 output DP-3
workspace 3 output HDMI-0

# Move workspaces to other monitors https://unix.stackexchange.com/a/397270
bindsym $mod+Ctrl+greater move workspace to output right
bindsym $mod+Ctrl+less move workspace to output left

# Switch to workspaces on the same monitor
bindsym $mod+Tab workspace next_on_output
bindsym $mod+Shift+Tab workspace prev_on_output
# switch between the current and the previously focused one
bindsym $mod+b workspace back_and_forth

# Mouse behaviour
focus_follows_mouse no
# mouse_warping none

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad
# Show the first scratchpad window
bindsym $mod+minus scratchpad show

popup_during_fullscreen leave_fullscreen

for_window [class=Enpass] floating enable
for_window [class=Gnome-calculator] floating enable
for_window [class=zoom] floating enable

# ranger file manager
bindsym $mod+n exec --no-startup-id $terminal -e ranger && i3-msg "[id=$(xdotool getactivewindow)] floating enable"

# With help from https://www.reddit.com/r/i3wm/comments/65vis5/screenshot_commands_from_my_i3_config/
# Screenshot with scrot
bindsym --release Print exec scrot -e 'mv $f ~/Pictures/'
# Screenshot with scrot - area selection
bindsym --release $mod+Print exec scrot -s -e 'mv $f ~/Pictures/'
bindsym --release Shift+Print exec scrot -s -e 'mv $f ~/Pictures/'
